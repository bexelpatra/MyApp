<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 배경색 설정 -->
    <solid android:color="#FFFFFF" />

    <!-- 테두리 설정 -->
    <stroke
        android:width="3dp"
        android:color="#58438d" />

    <!-- 모서리 둥글기 설정 -->
    <corners android:radius="25dp" />

    <!-- 내부 패딩 설정 -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>